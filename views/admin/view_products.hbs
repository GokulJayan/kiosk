<div class="col-lg-11 col-md-8 m-auto">

    <table class="table mt-5 table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
                <th scope="col"> </th>
            </tr>
        </thead>

        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{this.ID}}</th>
                <td>{{this.Name}}</td>
                <td>{{this.Category}}</td>
                <td>{{this.Description}}</td>
                <td><img href="#" style="width: 50px" src="http://localhost:3000/images/{{this.ID}}.jpeg" alt=""
                        class="img"></td>
                <td>â‚¹{{this.Price}}</td>
                <td>
                    <a href="/admin/products/edit/{{this.ID}}" class="btn text-primary m-auto fas fa-edit"></a>
                    <a href="/admin/products/delete/{{this.ID}}" class="fas fa-trash-alt btn m-auto text-danger"
                        onclick="return confirm('Do you want to delete {{this.Name}} ?')"></a>
                </td>
            </tr>
            {{/each}}

        </tbody>

    </table>
    <br>

    <div class="container">
        <div class="row mb-4">
            <a href="/admin/add-product" class="btn btn-danger m-auto">Add Product</a>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/949212ea46.js" crossorigin="anonymous"></script>


