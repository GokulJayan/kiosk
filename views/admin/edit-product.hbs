<div class="row">
    <div class="class col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Edit Product</h2>
            <form action="/admin/products/edit/{{product.ID}}" method="POST" enctype="multipart/form-data">

                <label for="">ID</label>
                <input type="text" name="ID" class="form-control" value="{{product.ID}}">

                <label for="">Name</label>
                <input type="text" name="Name" class="form-control" value="{{product.Name}}">

                <label for="">Category</label>
                <input type="text" name="Category" class="form-control" value="{{product.Category}}">

                <label for="">Price</label>
                <input type="text" name="Price" class="form-control" value="{{product.Price}}">

                <label for="">Description</label>
                <input type="text" name="Description" class="form-control" value="{{product.Description}}"><br>

                <label for="">Image</label>
                <img style="width: 100px; height:auto" src="http://localhost:3000/images/{{product.ID}}.jpeg" id="View">
                <input type="file" name="Image" class="form-control" onchange="viewImage(event)">

                <button type="submit" class="btn btn-warning mt-4" onclick="return confirm('Do you want to update ?')"> Update</button>
            </form>
            <br><br>


        </div>
    </div>
</div>


<script>
    function viewImage(event){
        document.getElementById('View').src=URL.createObjectURL(event.target.files[0])
    }
</script>